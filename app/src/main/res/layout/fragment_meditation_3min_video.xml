<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.RegistrationFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBDA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/main_app_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/ic_dehaze"
                    android:foreground="@drawable/ic_dehaze"
                    android:foregroundTint="?attr/colorOnSurface" />

                <View
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/label_selp"
                    android:backgroundTint="?attr/colorOnSurface" />

                <Button
                    android:id="@+id/account"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/ic_person"
                    android:foreground="@drawable/ic_person"
                    android:foregroundTint="?attr/colorOnSurface" />

            </FrameLayout>

        </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/image_ramka_medit_sound"
        android:layout_width="346dp"
        android:layout_height="144dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/meditation_text_ramka"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/meditation_basic_fon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_app_bar"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/volume_help_breath"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="16dp"
            android:background="@drawable/background_icon_button"
            android:elevation="2dp"
            android:foreground="@drawable/ic_volume_off"
            android:foregroundTint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/play_meditation_3min"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:layout_marginBottom="484dp"
            android:background="@drawable/background_icon_button"
            android:elevation="2dp"
            android:foreground="@drawable/ic_play"
            android:foregroundTint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_ramka_medit_text"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/meditation_text_ramka"
            android:elevation="4dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/meditation_basic_fon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_ramka_medit_sound"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/title_200"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Медитация (3 мин)"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_usual_infos"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/info_about_meditation_4min"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/title_200" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
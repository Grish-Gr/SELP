<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.VideoFragment">


    <VideoView
        android:id="@+id/definition_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"/>

    <Button
        android:id="@+id/restart_def_video"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/background_icon_button"
        android:elevation="2dp"
        android:foreground="@drawable/ic_restart"
        android:foregroundTint="?attr/colorSurface"
        android:onClick="resetVideo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/pause_def_video"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/background_icon_button"
        android:elevation="2dp"
        android:foreground="@drawable/ic_pause"
        android:foregroundTint="?attr/colorSurface"
        android:onClick="pauseVideo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/play_def_video"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_margin="64dp"
        android:background="@drawable/background_icon_button"
        android:elevation="2dp"
        android:foreground="@drawable/ic_play"
        android:foregroundTint="?attr/colorSurface"
        android:onClick="playVideo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pause_def_video"
        app:layout_constraintStart_toEndOf="@id/restart_def_video" />

    <Button
        android:id="@+id/back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:foreground="@drawable/ic_back"
        android:elevation="2dp"
        android:background="@drawable/background_icon_button"
        android:layout_margin="16dp"
        android:foregroundTint="?attr/colorSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/menu"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:foreground="@drawable/ic_dehaze"
        android:elevation="2dp"
        android:background="@drawable/background_icon_button"
        android:layout_margin="16dp"
        android:foregroundTint="?attr/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>



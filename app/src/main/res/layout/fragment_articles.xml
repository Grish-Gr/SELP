<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.RegistrationFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/main_app_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/ic_dehaze"
                    android:foreground="@drawable/ic_dehaze"
                    android:foregroundTint="?attr/colorOnSurface" />

                <View
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/label_selp"
                    android:backgroundTint="?attr/colorOnSurface" />


                <Button
                    android:id="@+id/account"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/ic_person"
                    android:foreground="@drawable/ic_person"
                    android:foregroundTint="?attr/colorOnSurface" />

            </FrameLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_meditation"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:src="@drawable/meditation_basic_fon"
            android:elevation="4dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/back_for_meditation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/main_app_bar" >

            <TextView
                android:id="@+id/title_help_btn"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:gravity="center"
                android:text="В разделе Статьи вы сможете узнать больше полезной информации о Панических атаках и других психологических заболеваниях"
                android:textColor="?attr/colorSurface"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/openVideoInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="128dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FFFFFF"
                android:text="Посмотреть видео"
                android:textColor="#000000"
                android:textColorLink="#5080FC"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_help_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/your_programm_text"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"

            android:text="Доступные вам статьи:"
            android:textSize="21sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="29dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"/>

        <!--        <TextView-->
        <!--            android:id="@+id/your_programm_text"-->
        <!--            android:layout_width="353dp"-->
        <!--            android:layout_height="121dp"-->
        <!--            android:layout_marginTop="268dp"-->
        <!--            android:gravity="center"-->
        <!--            android:text="Контент, подобранный специально для вас"-->
        <!--            android:textSize="20sp"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            tools:layout_editor_absoluteX="29dp" />-->




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_in_meditation_3min"
            android:layout_width="330dp"
            android:layout_height="127dp"
            android:src="@drawable/meditation_fone"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="376dp"
            android:elevation="4dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/image_article_first"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/image_meditation">

            <TextView
                android:id="@+id/title_3min"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="Что такое Паническая атака ?"
                android:textColor="?attr/colorSurface"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_time_3min"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="left"
                android:text="10 минут"
                android:textColor="#DCDCDC"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/title_3min" />

            <Button
                android:id="@+id/read_article_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#f2f3f4"
                android:text="Прочитать"
                android:textColor="#80231F20"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="63dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        <ImageView-->
        <!--            android:id="@+id/image_info_meditation"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:src="@drawable/line_play_meditation"/>-->

        <!--        <ImageView-->
        <!--            android:id="@+id/image_info_meditation"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:src="@drawable/line_play_meditation"/>-->

        <Button
            android:id="@+id/open_adding_articles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="140dp"
            android:text="Написать статью"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_in_meditation_3min"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/icon_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/arrow"
        android:elevation="4dp" />

    <RelativeLayout
        android:id="@+id/icon_person"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/menu"
        android:elevation="4dp" />

    <View
        android:id="@+id/ellipse_center_black"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="650dp"
        android:background="@drawable/ellipse_black" />

    <View
        android:id="@+id/ellipse_right_black"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="690dp"
        android:background="@drawable/ellipse_black" />

    <View
        android:id="@+id/ellipse_left_black"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="690dp"
        android:background="@drawable/ellipse_black"
        />

    <RelativeLayout
        android:id="@+id/icon_playbottom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="676dp"
        android:background="@drawable/playbotom"
        android:elevation="4dp" />

    <RelativeLayout
        android:id="@+id/icon_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="315dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="715dp"
        android:background="@drawable/cancel"
        android:elevation="4dp" />

    <RelativeLayout
        android:id="@+id/icon_return"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="715dp"
        android:background="@drawable/resource_return"
        android:elevation="4dp" />



</RelativeLayout>
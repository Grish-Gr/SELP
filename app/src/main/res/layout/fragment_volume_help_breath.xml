<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorTertiaryContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/help_breath_indicator"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:background="@drawable/help_breath_indicator"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/help_breath_indicator_circle"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:background="@drawable/indicator_breath"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/hint_breath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the printer took a galley of type and  "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_breath_indicator"
        app:layout_constraintBottom_toTopOf="@id/play_help_breath"/>


    <Button
        android:id="@+id/volume_help_breath"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:foreground="@drawable/ic_volume_on"
        android:foregroundTint="?attr/colorOnSurface"
        android:background="@drawable/background_icon_button"
        android:elevation="2dp"
        android:layout_margin="16dp"
        android:onClick="playAndPauseSound"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/play_help_breath"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:foreground="@drawable/ic_pause"
        android:elevation="2dp"
        android:background="@drawable/background_icon_button"
        android:layout_margin="16dp"
        android:foregroundTint="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:foreground="@drawable/ic_back"
        android:elevation="2dp"
        android:background="@drawable/background_icon_button"
        android:layout_margin="16dp"
        android:foregroundTint="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/menu"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:foreground="@drawable/ic_dehaze"
        android:elevation="2dp"
        android:background="@drawable/background_icon_button"
        android:layout_margin="16dp"
        android:foregroundTint="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

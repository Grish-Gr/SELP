    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_app_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="7dp"
                android:foreground="@drawable/ic_dehaze"
                android:foregroundTint="?attr/colorOnSurface"
                android:background="@drawable/ic_dehaze"
                android:layout_gravity="center_vertical|start"/>

            <View
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:background="@drawable/label_selp"
                android:backgroundTint="?attr/colorOnSurface"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/account"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="7dp"
                android:foreground="@drawable/ic_person"
                android:foregroundTint="?attr/colorOnSurface"
                android:background="@drawable/ic_person"
                android:layout_gravity="end|center_vertical"/>

        </FrameLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/image_meditation"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:src="@drawable/meditation_basic_fon"
        android:elevation="4dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/meditation_basic_fon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/main_app_bar" >

        <TextView
            android:id="@+id/title_help_btn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="В этом разделе доступны для прохождения разные тесты которые помогут тебе более объективно оценить твое психологическое здоровье."
            android:textColor="?attr/colorSurface"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/add_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="138dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:text="Создать тест"
            android:textColor="#000000"
            android:textColorLink="#5080FC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_help_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>


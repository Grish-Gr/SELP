    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/test_quality_sleep"
        android:layout_width="330dp"
        android:layout_height="157dp"
        android:src="@drawable/meditation_fone"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="376dp"

        android:elevation="4dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/kit_for_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/image_meditation">

        <Button
            android:id="@+id/test_quality_sleep_butt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f2f3f4"
            android:text="Пройти"
            android:textColor="#80231F20"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="63dp" />

        <TextView
            android:id="@+id/title_test_sleep"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="@string/test_quality_sleep"
            android:textColor="?attr/colorSurface"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result_quality_sleep"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:gravity="left"
            android:textColor="#DCDCDC"
            android:textSize="22sp"
            android:layout_margin="12dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_test_sleep" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/test_anxiety_level"
        android:layout_width="330dp"
        android:layout_height="157dp"
        android:src="@drawable/night_for_test"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="537dp"
        android:elevation="4dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/night_for_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/test_quality_sleep">

        <TextView
            android:id="@+id/title_5min"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="@string/test_anxiety_level"
            android:textColor="?attr/colorSurface"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/read_article_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f2f3f4"
            android:text="Пройти"
            android:textColor="#80231F20"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/test_anxiety_level" />

        <TextView
            android:id="@+id/result_anxiety_level"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:gravity="left"
            android:textColor="#DCDCDC"
            android:textSize="22sp"
            android:layout_margin="12dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/read_article_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    android:minWidth="280dp"
    style="@style/MaterialAlertDialog.Material3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_reminder_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="2dp"
        android:text="Дружеское напоминание"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/reminder_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Привет, не забудь пожалуйста выбрать какое у тебя сейчас настроение, это достаточно важно, спасибо."
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Позже"
        android:layout_marginTop="16dp"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/go_to_mood"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reminder_text"/>

    <Button
        android:id="@+id/go_to_mood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Хорошо"
        android:layout_marginTop="16dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reminder_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>
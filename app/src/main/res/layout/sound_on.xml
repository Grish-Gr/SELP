<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBDCFF">


    <View
        android:id="@+id/ellipse_31"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/ellipse_31"

        />
    <RelativeLayout
        android:id="@+id/icon_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/arrow"
        android:elevation="4dp" />

    <RelativeLayout
        android:id="@+id/icon_person"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="350dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/menu"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/text_sound"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ellipse_31"
        android:layout_centerInParent="true"

        android:layout_marginTop="60dp"
        android:text="Lorem Ipsum is simply  "

        android:textAlignment="center"
        android:textSize="25sp" />
    <View
        android:id="@+id/ellipse_left_small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="41dp"
        android:layout_below="@+id/text_sound"
        android:layout_marginTop="60dp"
        android:background="@drawable/ellipse_25"
        />
    <View
        android:id="@+id/ellipse_center_small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_sound"
        android:layout_marginTop="60dp"
        android:background="@drawable/ellipse_25"
        />
    <View
        android:id="@+id/ellipse_right_small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/text_sound"
        android:layout_marginTop="60dp"
        android:background="@drawable/ellipse_25"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="290dp"
        />

    <RelativeLayout
        android:id="@+id/icon_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_sound"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/pause"
        android:elevation="4dp" />

    <RelativeLayout
        android:id="@+id/icon_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_sound"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="310dp"
        android:background="@drawable/cancel"
        android:elevation="4dp" />

    <RelativeLayout
        android:id="@+id/icon_volumen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_sound"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="62dp"
        android:background="@drawable/volumen2"
        android:elevation="4dp" />




</RelativeLayout>
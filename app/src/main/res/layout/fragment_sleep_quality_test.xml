                android:text="Не часто"/>

            <RadioButton
                android:id="@+id/night_awakenings_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Редко"/>

            <RadioButton
                android:id="@+id/night_awakenings_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Нет"/>

        </RadioGroup>
    </LinearLayout>
</androidx.cardview.widget.CardView>
